<Window x:Class="_08._Formulär_för_studenter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_08._Formulär_för_studenter"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="10">
        <Label Content="Students:"/>

            <ListBox x:Name="myListBox" Width="150" Height="180" HorizontalAlignment="Left"/>

        </StackPanel>

        <StackPanel Grid.Column="1" Orientation="Vertical"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <Label Content="Firstname:"/>
            <TextBox Text="Blaze"/>
            
            <Label Content="Lastname:"/>
            <TextBox Text="Baley"/>

            <Label Content="Email:"/>
            <TextBox Text="Blaze.Baley@ironmaiden.com"/>
            
            <Button Content="Ok" Width="50" Margin="10"/>



        </StackPanel>
    </Grid>
</Window>
